<div class="signup_form">
  <div class="signup_area">
    <h1>ユーザー情報編集</h1>

    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "件のエラー") %> が発生したため <%= @user.name %> の更新が送信されませんでした</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @user, local: true) do |f| %>  
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>

      <%= f.label :email %><br>
      <%= f.email_field :email %><br>

      <%= f.label :position %><br>
      <%= f.text_field :position %><br>

      <%= f.label :unit %><br>
      <%=f.collection_select :unit_id, @unit.all, :id, :name, include_blank: "選択して下さい" %><br>

    <%= link_to "所属部署を新規作成する場合コチラ", new_unit_path %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password %><br>

      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %><br>
      <br>
      <%= f.submit "編集する" %><br>
    <% end %>
    <%= link_to '戻る', user_path(current_user.id) %>
  </div>
</div>


