<div class="page_field">
<p id="notice"><%= notice %></p>
  <div class="profile">
  <h1><%= @user.name %>のページ</h1>
    <h3>プロフィール</h3>
      <p>メールアドレス: <%= @user.email %></p>
      <p>役職: <%= @user.position %></p>
      <p>所属部署: <%= @user.unit.name %></p>
    </div>
  
  <div class="mypage_links">
    <div>
      <%= link_to "新規投稿", new_post_path %>
    </div>
    <%= link_to "全てのユーザーの投稿一覧", posts_path %>
    <div>
    <%= link_to "#{current_user.name}の投稿一覧", my_posts_path %>
    </div>
    <%= link_to "ブックマーク&コメント一覧", markings_path %>
    <div>
    <%= link_to "ユーザー情報編集", edit_user_path %>
    </div>
  </div>


  <h1><%= @user.unit.name %>の投稿一覧</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>発生時刻</th>
        <th>事象</th>
        <th>発生地点</th>
        <th>車両番号</th>
        <th>ユーザー</th>
        <th>ラベル</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= l post.ocurence %></td>
          <td><%= post.content %></td>
          <td><%= post.location %></td>
          <td><%= post.train_code %></td>
          <td><%= post.user.name %></td>
          <td>
            <% post.labels.each do |label| %>
              <%= label.name %>
            <% end %>
          </td>
          <td><%= link_to '詳細', post, class: "btn btn-primary font-weight-bold" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>