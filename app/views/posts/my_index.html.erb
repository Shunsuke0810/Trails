
<h1><%= current_user.name %>の投稿一覧</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>発生時刻</th>
      <th>事象</th>
      <th>発生地点</th>
      <th>車両番号</th>
      <th>ユーザー</th>
      <th>ラベル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= l post.ocurence %></td>
        <td><%= post.content %></td>
        <td><%= post.location %></td>
        <td><%= post.train_code %></td>
        <td><%= post.user.name %></td>
        <td>
          <% post.labels.each do |label| %>
            <%= label.name %>
          <% end %>
        </td>
        <td><%= link_to '詳細', post, class: "btn btn-primary font-weight-bold" %></td>
        <td><%= link_to '編集', edit_post_path(post), class: "btn btn-success font-weight-bold"%></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: '削除してよろしいですか?' }, class: "btn btn-danger font-weight-bold"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '戻る', user_path(current_user.id) %>
