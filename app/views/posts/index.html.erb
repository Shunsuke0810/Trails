<p id="notice"><%= notice %></p>

<h1>全ての投稿</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>発生時刻</th>
      <th>事象</th>
      <th>発生場所</th>
      <th>車両番号</th>
      <th>ユーザー</th>
      <th>ラベル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= l post.ocurence %></td>
        <td><%= post.content %></td>
        <td><%= post.location %></td>
        <td><%= post.train_code %></td>
        <td><%= post.user.name %></td>
        <td>
          <% post.labels.each do |label| %>
            <%= label.name %>
          <% end %>
        </td>
        <td><%= link_to '詳細', post, class: "btn btn-primary font-weight-bold", data: {"turbolinks" => false} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '戻る', user_path(current_user.id) %>
